<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/phone_contacts_tv"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:background="#f6f6f6"
        android:paddingBottom="5dip"
        android:paddingLeft="5dip"
        android:paddingTop="5dip"
        android:textColor="#454545" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <com.hanyu.desheng.ui.CircleImageView
            android:id="@+id/phone_contacts_iv"
            android:layout_width="42.0dip"
            android:layout_height="54.0dip"
            android:layout_marginLeft="10dp"
            android:paddingLeft="5dip"
            android:src="@drawable/default_avatar" />

        <TextView
            android:id="@+id/phone_contacts_tv2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dip"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:textColor="#000000" />

        <Button
            android:clickable="true"
            android:focusable="false"
            android:id="@+id/phone_contacts_btn"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/zx_10"
            android:text="添加"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/phone_contacts_tv3"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="已添加"
            android:textColor="#b1b1b1"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/phone_contacts_tv4"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="等待验证"
            android:textColor="#b1b1b1"
            android:textSize="14sp"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        style="@style/DividerLine_style"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

</LinearLayout>