<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/syt_02" >

    <RelativeLayout
        android:id="@+id/contacts_rl_back"
        android:layout_width="45dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/dl_03" />
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/rg_contact"
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:background="@drawable/contacts_bg1"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_contact"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/contacts_bg"
            android:button="@null"
            android:gravity="center"
            android:text="好友"
            android:textColor="@color/cotacts_text_color"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rb_group"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/contacts_bg"
            android:button="@null"
            android:gravity="center"
            android:text="群组"
            android:textColor="@color/cotacts_text_color"
            android:textSize="18sp" />
    </RadioGroup>

    <RelativeLayout
        android:id="@+id/contacts_right"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp" >

        <ImageView
            android:id="@+id/iv_friend_right"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ss_03" />
    </RelativeLayout>

</RelativeLayout>