<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:layout_above="@+id/t_dialoglv"
    android:orientation="vertical"
    >
    <include layout="@layout/title_act_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp">

        <com.hanyu.desheng.ui.ClearEditText
            android:id="@+id/invitefriend_cet"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/ss_07"
            android:drawableLeft="@drawable/cy_07"
            android:hint="搜索好友"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="14sp" />
    </RelativeLayout>
    <RelativeLayout
    	
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
    >
	<CheckBox 
	    android:id="@+id/T_selectAll"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:button="@null"
	    android:text="@string/T_SelectAll"
	    android:layout_alignParentRight="true"
	    android:drawableRight="@drawable/t_checkbox_selector"
	    android:drawablePadding="20dp"
	    /> 
	    <CheckBox 
	    android:id="@+id/T_selectmore"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:button="@null"
	    android:text="多选"
	    android:layout_toLeftOf="@+id/T_selectAll"
	   	android:layout_marginRight="30dp"
	    android:drawableRight="@drawable/t_checkbox_selector"
	    android:drawablePadding="20dp"
	    /> 
	</RelativeLayout>
    

    <com.hanyu.desheng.pulltorefresh.PullToRefreshListView
        android:id="@+id/invitefriend_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:divider="@null"
        android:scrollbars="@null" >
    </com.hanyu.desheng.pulltorefresh.PullToRefreshListView>
    </LinearLayout>
 	<LinearLayout
 	    android:visibility="gone" 
 	    android:id="@+id/t_dialoglv" 
 	    android:layout_alignParentBottom="true"
 	    android:layout_alignParentLeft="true"
    	android:orientation="vertical"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content" >
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"
        />
    <LinearLayout
        android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
    <TextView 
        android:id="@+id/t_addtofrd" 
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="邀请好友"
        android:gravity="center"
        />
    <View
        android:layout_width="0.5dp"
        android:layout_height="30dp"
        android:background="@color/gray"
        android:layout_gravity="center_vertical"
        />
	<TextView
	    android:id="@+id/t_cancle" 
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="取消"
        android:gravity="center"
        />
	</LinearLayout>
	<View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"
        />
</LinearLayout>
</RelativeLayout>