<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/title_act_layout" />

    <ImageView
        style="@style/DividerLine_style"
        android:layout_marginTop="15dp" />

    <RelativeLayout
        style="@style/item_rl"
        android:layout_height="60dp" >

        <TextView
            android:id="@+id/orderdetails_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="收件人：沈昌"
            android:textColor="@color/gray3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="11984198498"
            android:textColor="@color/gray3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orderdetails_tv1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="收货地址：上海市青浦区"
            android:textColor="@color/gray2" />
    </RelativeLayout>

    <ImageView style="@style/DividerLine_style" />

    <ImageView
        style="@style/DividerLine_style"
        android:layout_marginTop="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp" >

        <ImageView
            android:id="@+id/orderdetails_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/meinv" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/orderdetails_iv"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="裙子"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="fasda"
                    android:textColor="#d76d52"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="共1件"
                        android:textColor="@color/gray2"
                        android:textSize="14sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            style="@style/DividerLine_style"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
    </RelativeLayout>

    <RelativeLayout style="@style/item_rl" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="运费：5元"
            android:textColor="@color/gray2" />
    </RelativeLayout>

    <ImageView
        style="@style/DividerLine_style"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <RelativeLayout style="@style/item_rl" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="卖家：卡乐优"
            android:textColor="@color/gray2" />
    </RelativeLayout>

    <ImageView
        style="@style/DividerLine_style"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <RelativeLayout style="@style/item_rl" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="订单号：165161489498"
            android:textColor="@color/gray2" />
    </RelativeLayout>

    <ImageView
        style="@style/DividerLine_style"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <RelativeLayout style="@style/item_rl" >

        <TextView
            android:id="@+id/orderdetails_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="206元"
            android:textColor="#d76d52" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/orderdetails_total"
            android:text="共计："
            android:textColor="@color/gray2" />
    </RelativeLayout>

    <ImageView style="@style/DividerLine_style" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            style="@style/DividerLine_style"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true" >

            <Button
                android:id="@+id/orderdetails_btn1"
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:background="@drawable/sh_14"
                android:text="物流追踪"
                android:textColor="@color/gray2" />

            <Button
                android:id="@+id/orderdetails_btn2"
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:background="@drawable/sh_14"
                android:text="确认收货"
                android:textColor="@color/gray2" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>